<html>
    <head>
        <meta charset="utf-8">
    </head>
    <body>
        <h1>Foods一覧</h1>
        <form action="/foods" method="get">
            <ul>
                <li>
                    <select name="food_list" id="food_list" value="全て" >
                        <!--rubyからデータもらう-->
                        <option value="all">全て</option>
                        <% @foods.each do |food| %>
                        <option value="food"><%= food[:name]%></option>
                        <% end %>
                    </select>
                    <input type="submit" value="検索" id="submit" name="submit" />
                </li>

            </ul>
        </form>
    </body>
</html>